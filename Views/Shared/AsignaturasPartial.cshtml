@* @model List<ObjetoEscuelaBase> *@

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">CursoId</th>
            <th scope="col">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Nombre</td>
                <td>@obj.CursoId</td>
                <td><a type="button" class="btn btn-outline-primary" asp-route-asignaturaId="@obj.Id" asp-controller="Asignatura"
    asp-action="Update">Editar</a>
                    <a type="button" class="btn btn-outline-danger" asp-route-asignaturaId="@obj.Id" asp-controller="Asignatura"
    asp-action="Delete">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>